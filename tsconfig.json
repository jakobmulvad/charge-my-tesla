{
  "compilerOptions": {
    "lib": ["ES2019", "ES2020"],
    "resolveJsonModule": true,
    "module": "CommonJS",
    "target": "ES2019",

    "strict": true,
    "esModuleInterop": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
  },
  "include": ["*.ts"]
}